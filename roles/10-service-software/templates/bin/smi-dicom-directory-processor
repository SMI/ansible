#!/usr/bin/env bash

# {{ ansible_managed }}

set -euo pipefail

if [[ $# -lt 1 ]]; then
    echo "Error: Usage $0 pacs-dir [options]"
    exit 1
fi

# shellcheck source=/dev/null
. _smi-load-env.bash

set -x
"{{ smi_service_software_install_dir }}/software/SmiServices/v${SMI_SMISERVICES_VERSION:?}/smi/smi" \
    dicom-directory-processor \
    -y "${env_dir:?}/file_load_services.yaml" \
    -f PACS \
    -d "$1" \
    "${@:3}"
