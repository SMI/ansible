#!/usr/bin/env bash

set -euxo pipefail

ansible-playbook \
    --connection local \
    --inventory "localhost," \
    -e "ansible_python_interpreter=$(command -v python || true)" \
    -e "preflight_group_name=${USER}" \
    -e "smi_docker_services_state=absent" \
    --tags docker \
    "${@}" \
    site.yaml
