#!/usr/bin/env bash

set -euxo pipefail

# NOTE(rkm 2023-11-29) Use the current python interpreter instead
# of the system default
local_python="$(command -v python || true)"

ansible-playbook \
    --inventory inventories/local/hosts.ini \
    -e "ansible_python_interpreter=${local_python}" \
    "${@}" \
    site.yml
